<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alex.demo.mapping.OrderMapper">
    <resultMap id="OrderDo" type="com.alex.demo.dto.OrderDto">
        <result column="id" property="id" />
        <result column="orderSn" property="order_sn" />
        <result column="userId" property="user_id" />
        <result column="amount" property="amount" />
        <result column="remark" property="remark" />
        <result column="createdAt" property="created_at" />
        <result column="updatedAt" property="updated_at" />
        <result column="state" property="state" />
    </resultMap>

    <select id="queryOrderByUserId" resultType="OrderDo">
        SELECT
               `id`,
               `order_sn`,
               `user_id`,
               `amount`,
               `remark`,
               `created_at`,
               `updated_at`,
               `state`
        FROM `user`
        WHERE
              user_id = #{user_id}
    </select>

    <insert id="insertOrder" parameterType="com.alex.demo.dto.OrderDto">
        INSERT INTO `user` (order_sn,user_id,amount,remark,created_at,updated_at,state)
        VALUES(
           #{orderSn}
           , #{userId}
           , #{amount}
           , #{remark}
           , #{createdAt}
           , #{updatedAt}
           , 1
        )
    </insert>

    <insert id="insertOrderBatch" parameterType="com.alex.demo.dto.OrderDto">
        INSERT INTO `user` (order_sn,user_id,amount,remark,created_at,updated_at,state)
        VALUES
        <foreach collection="list" item="item" separator=",">
            #{item.orderSn}
            , #{item.userId}
            , #{item.amount}
            , #{item.remark}
            , #{item.createdAt}
            , #{item.updatedAt}
            , 1
        </foreach>
    </insert>

</mapper>